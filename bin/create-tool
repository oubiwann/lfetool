#!/bin/bash

template="plugins/lfetool/templates/lfetool.tmpl"
temp="lfetool-temp"
dest="lfetool"

# load all the fillers from the plugins
for FILE in `ls plugins/*/filler.sh`; do
    source $FILE
done

# substitute template patterns with values
fill-tool-var () {
    template=$1
    pattern=$2
    if [ "$pattern" = "" ]; then
        pattern="{{NOOP}}"
    fi
    data=`cat "$template" | base64 --wrap=0`
    # DEBUG
    #echo $template
    #echo $pattern
    #echo $data
    sed -e "s#$pattern#$data#g" $dest > $temp
    mv $temp $dest
}

run () {
    cp $template $dest
    fill-lfetool-files
    fill-common-files
    fill-script
    fill-library-files
    fill-service-files
    fill-yaws-files
    chmod 755 $dest
}

run
